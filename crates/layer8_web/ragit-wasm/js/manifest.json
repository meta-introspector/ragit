{
  "manifest_version": 3,
  "name": "RAGIT Knowledge Base",
  "version": "0.1.0",
  "description": "Turn your browsing into a searchable knowledge base",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "RAGIT"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}